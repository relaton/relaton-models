class LocalizedString{
  definition {
     FormattedString which optionally specifies its language, locale, and/or script.
  }
  +language: Iso639Code[0..*] {
    definition {
      Language of string.
    }
  }
  +locale: Iso3166Code[0..*] {
    definition {
      Locale of string.
    }
  }
  +script: Iso15924Code[0..*] {
    definition {
      Script of string.
    }
  }
  +content: String  {
    definition {
      The string being localized.
    }
  }
}
